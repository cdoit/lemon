<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>悉道设备管理云平台用户登录</title>
    <link rel="Bookmark" href="../../../images/favicon.ico">
    <link rel="Shortcut Icon" href="../../../images/favicon.ico" />
    <link rel="stylesheet" href="../../css/bootstrap.min.css" />
    <!-- <script src="../../js/bootstrap.min.js"></script> -->
    <style type="text/css">
        body {
            background: url(../../img/login_bg.jpg) #f8f6e9;
            background-size: cover;
        }

        .mycenter {
            position: absolute;
            vertical-align: middle;
            left: 50%;
            top: 50%;
            height: 260px;
            width: 380px;
            background-color: #fff;
            margin-left: -190px;
            margin-top: -130px;
            padding: 20px;
        }
    </style>
</head>

<body>
    <form action="/device/login" method="post" role="form">
        <div class="mycenter">
            <div class="form-group">
                <h3 class="form-title">请登录</h3>
                <div class="form-group">
                    <input type="text" class="form-control required" name="username" placeholder="请输入账户名" autofocus />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="请输入密码" required autofocus />
                </div>
                <div class="form-group">
                    <input type="checkbox" class="col-lg-1" />记住密码
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success col-lg-12">登录</button>
                </div>
            </div>
        </div>
    </form>
    <script type="text/javascript" src="../../lib/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            // var index = parent.layer.getFrameIndex(window.name);
            //最大父frame
            var zobj = window.parent.document.getElementById('iframe_box');
            //二级父frame
            var robj = window.parent.parent.document.getElementById('iframe_box');

            console.log(zobj);
            console.log(robj);
            // alert("1:"+zobj+"  2:"+robj);
            if (zobj != undefined && zobj != "" && zobj != null) {
                parent.window.location.href = '/device/manager/index';
            }
            if (robj != undefined && robj != "" && robj != null) {
                parent.parent.window.location.href = '/device/manager/index';
            }
        });
    </script>
</body>

</html>